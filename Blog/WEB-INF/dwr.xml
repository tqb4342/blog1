<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC 
	"-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
	"http://getahead.org/dwr/dwr30.dtd">
<dwr>
	<allow>
		<create creator="spring" javascript="UserManager"> 
			<param name="beanName" value="userManager"/>
		</create> 
		<create creator="spring" javascript="BlogManager"> 
			<param name="beanName" value="blogManager"/>
		</create> 
		
		<create creator="spring" javascript="BtypesManager"> 
			<param name="beanName" value="btypesManager"/>
		</create> 
		
		<create creator="spring" javascript="CommentManager"> 
			<param name="beanName" value="commentManager"/>
		</create> 
		
		<create creator="spring" javascript="ResourceManager"> 
			<param name="beanName" value="resourceManager"/>
		</create> 
		
		<create creator="spring" javascript="ResourceTypeManager"> 
			<param name="beanName" value="resourceTypeManager"/>
		</create> 
		
		
		<!-- 定义使用Bean转换器处理如下Java类 -->
		<convert converter="bean" match="boke.po.User"/> 
		<convert converter="bean" match="boke.po.Blog"/> 
		<convert converter="bean" match="boke.po.Btypes"/> 
		<convert converter="bean" match="boke.po.Comments"/> 
		<convert converter="bean" match="boke.po.Resource"/> 
		<convert converter="bean" match="boke.po.ResourceType"/> 
	</allow>
</dwr>