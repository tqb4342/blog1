<?xml version="1.0" encoding="UTF-8"?>
<!-- 指定Spring配置文件的Schema信息 -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  

	<bean id="userDao" class="boke.dao.impl.UserDaoHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean> 
	
	<bean id="blogDao" class="boke.dao.impl.BlogDaoHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean> 
	
	<bean id="btypesDao" class="boke.dao.impl.BtypesDaoHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean> 
	
	<bean id="commentDao" class="boke.dao.impl.CommentDaoHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean> 
	
	<bean id="resourceTypeDao" class="boke.dao.impl.ResourceTypeDaoHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean> 
	
	<bean id="resourceDao" class="boke.dao.impl.ResourceDaoHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
</beans>